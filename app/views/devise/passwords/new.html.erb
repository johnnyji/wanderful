<div class="devise-form-wrapper">
	<h2>Forgot your password?</h2>
	<br>
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Your email please" %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Retrieve My Password" %>
	  </div>

		<div class="devise-links">
			<div class="login">
	  		<%= link_to "Sign up!", new_user_registration_path %> | <%= link_to "Already have an account?", new_user_session_path %>
	  	</div>
		</div>
	<% end %>	
</div>