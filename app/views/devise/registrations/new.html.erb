<div class="devise-form-wrapper">
  <h2>Your almost there!</h2>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, placeholder: "James Bond" %>
      <%= f.input :email, required: true, placeholder: "123@awesome.com" %>
      <%= f.input :password, required: true, placeholder: "8 characters minimum"%>
      <%= f.input :password_confirmation, label: "Confirm", required: true, placeholder: "Re-enter your password" %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, "Done!" %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>

</div>
