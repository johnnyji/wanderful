<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="error-title">
    <%= f.error_notification %>
  </div>
  <div class="form-inputs">
    <%= f.input :image, label: false, placeholder: "Pick a picture!" %>
    <%= f.input :name, label: false, required: true, autofocus: true, placeholder: "Your name (John Smith)" %>
    <%= f.input :username, label: false, required: true, autofocus: true, placeholder: "Pick a username" %>
    <div class="username-hint" style="display:none;">
      <%= render partial: "format" %>
    </div>
    <div class="devise-error"></div>
    <%= f.input :email, label: false, required: true, placeholder: "Your email" %>
    <%= f.input :password, label: false, required: true, placeholder: "Password: 8 characters min" %>
    <%= f.input :password_confirmation, label: false, required: true, placeholder: "Re-enter your password" %>
    <%= f.input :description, label: false, maxlength: 300, placeholder: "Tell us something about yourself! (300 chars max)" %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Done!" %>
  </div>
<% end %>