<div class="user">
	<%= link_to comment.user.name, user_path(comment.user) %>
	<div class="delete">
		<% if comment.user == current_user || @post.user == current_user %>
			<%= link_to "Delete", [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"}, class: "delete-comment" %>
		<% end %>
	</div> 
</div>
<div class="content">
	<%= comment.content %>
</div>