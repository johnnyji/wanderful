
<!-- MAIN CONTENT -->
<div class="show-post-wrapper">
	<h1>
		<%= @post.title %>
		<span class="show-subtitle">
			<div class="visit-link">
				<%= link_to "Visit Link", @post.link, target: "_blank" %>
			</div>
			
			<span class="show-edit-delete">
				<% if @post.user == current_user %>
					<%= link_to "Edit", edit_post_path(@post) %> | 
					<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
				<% end %>
			</span>
		</span>
	</h1>

	<h5>Post created by <%= link_to @post.user.name, user_path(@post.user) %> <%= time_ago_in_words(@post.created_at) %> ago</h5>
	<%= image_tag @post.image.url(:medium) %>
	
	<div class="show-likes-comments">
		<%= link_to like_post_path(@post), method: :get, class: "data" do %>
			<i class="fa fa-thumbs-o-up"></i>
			<%= pluralize(@post.get_upvotes.size, "Like") %>
		<% end %>

		<%= link_to dislike_post_path(@post), method: :get, class: "data" do %>
			<i class="fa fa-thumbs-o-down"></i>
			<%= pluralize(@post.get_downvotes.size, "Dislike") %>
		<% end %>
	</div>
	
	<div class="show-description">
		<%= simple_format(@post.description) %>
	</div>
</div>

<!-- SIDEBAR -->
<div class="show-sidebar">

	<h3>Check out other posts!</h3>
	<%= link_to (image_tag @random_post.image.url(:thumb)), post_path(@random_post) %>
	<h2><%= link_to @random_post.title, post_path(@random_post) %></h2>
	<p>
		Shared by <%= @random_post.user.name %> <br>
		<i class="fa fa-comment-o">&nbsp;<%= @random_post.comments.count %> Comments</i>&nbsp;&nbsp;&nbsp;
		<i class="fa fa-thumbs-o-up">&nbsp;<%= @random_post.get_likes.size %> Likes</i>
	</p>

</div>

<!-- COMMENTS -->
<div class="comments">
	<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
	
	<% @comments.each do |comment| %>
		<div class="user">
			<%= comment.user.name %>
			<div class="delete">
				<% if @post.user == current_user %>
					<%= link_to "Delete", [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"} %>
				<% end %>
			</div> 
		</div>
		<div class="content">
			<%= comment.content %>
		</div>
	<% end %>
</div>

<%= render "comments/form" %>