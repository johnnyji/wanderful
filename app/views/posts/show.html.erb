<h1><%= @post.title %></h1>
<p>Post created by <%= @post.user.name %> around <%= time_ago_in_words(@post.created_at) %></p>


<%= image_tag @post.image.url(:medium) %>
<%= simple_format(@post.description) %>
<%= link_to "Visit Link", @post.link %>
<%= link_to "Go Home", root_path %>

<!-- displaying clickable like and dislike buttons -->
<%= link_to like_post_path(@post), method: :get, class: "data" do %>
	<i class="fa fa-thumbs-o-up"></i>
	<%= pluralize(@post.get_upvotes.size, "Like") %>
<% end %>

<%= link_to dislike_post_path(@post), method: :get, class: "data" do %>
	<i class="fa fa-thumbs-o-down"></i>
	<%= pluralize(@post.get_downvotes.size, "Dislike") %>
<% end %>

<p>
	<i class="fa fa-comments-o"></i>
	<%= pluralize(@post.comments.count, "Comment") %>
</p>

<% if @post.user == current_user %>
	<%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
	<% @comments.each do |comment| %>
		<%= comment.user.name %>
		<%= comment.content %>
	<% end %>

	<%= render "comments/form" %>