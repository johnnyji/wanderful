<%= image_tag @post.image.url(:medium) %>
<h1><%= @post.title %></h1>
<p><%= @post.link %></p>
<p><%= @post.user.name %></p>
<p><%= @post.description %></p>
<p><%= @post.get_upvotes.size %> Likes</p>
<p><%= @post.get_downvotes.size %> Dislikes</p>

<%= link_to "like", like_post_path(@post), method: :get %>
<%= link_to "dislike", dislike_post_path(@post), method: :get %>

<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
	<% @comments.each do |comment| %>
		<%= comment.user.name %>
		<%= comment.content %>
	<% end %>

	<%= render "comments/form" %>
<% if user_signed_in? %>
	<%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure??"} %>
<% end %>

<%= link_to "Go Home", posts_path %>