
<!-- MAIN CONTENT -->
<div class="show-post-wrapper">
	<h1><%= @post.title %></h1>
	<h5>Post created by <%= @post.user.name %> around <%= time_ago_in_words(@post.created_at) %></h5>
	<%= image_tag @post.image.url(:medium) %>
	
	<div class="show-likes-comments">
		<%= link_to like_post_path(@post), method: :get, class: "data" do %>
			<i class="fa fa-thumbs-o-up"></i>
			<%= pluralize(@post.get_upvotes.size, "Like") %>
		<% end %>

		<%= link_to dislike_post_path(@post), method: :get, class: "data" do %>
			<i class="fa fa-thumbs-o-down"></i>
			<%= pluralize(@post.get_downvotes.size, "Dislike") %>
		<% end %>
	</div>
	
	<div class="show-description">
		<%= simple_format(@post.description) %>
	</div>
</div>

<!-- SIDEBAR -->
<div class="show-sidebar">

	<% if @post.user == current_user %>
		<%= link_to "Edit", edit_post_path(@post) %>
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
	<% end %>

	<h3>Check out other posts!</h3>
	<%= link_to (image_tag @random_post.image.url(:thumb)), post_path(@random_post) %>
	<h2><%= link_to @random_post.title, post_path(@random_post) %></h2>
	<p>
		Shared by <%= @random_post.user.name %>
		<i class="fa fa-comment-o"><%= @random_post.comments.count %> Comments</i>
		<i class="fa fa-thumbs-o-up"><%= @random_post.get_likes.size %> Likes</i>
	</p>

</div>

<%= link_to "Visit Link", @post.link %>
<%= link_to "Go Home", root_path %>


<p>
	<i class="fa fa-comment-o"></i>
	<%= pluralize(@post.comments.count, "Comment") %>
</p>


<h2><%= pluralize(@post.comments.count, "Comment") %></h2>
	
	<% @comments.each do |comment| %>
		<%= comment.user.name %>
		<%= comment.content %>
	<% end %>

 <%= render "comments/form" %>