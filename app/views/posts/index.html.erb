<% if user_signed_in? %>
	<p>Hello <%= current_user.name %>, find anything cool online today?</p>
<% else %>
	<p>Share what you find online, sign up today.</p>
<% end %>

<% @posts.each do |post| %>
	<%= link_to (image_tag post.image.url(:thumb)), post %>
	<h1><%= link_to post.title, post %></h1>
	<i class="fa fa-comments-o"><%= post.comments.count %> Comments</i>
	<i class="fa fa-thumbs-o-up"><%= post.get_likes.size %> Likes</i>
<% end %>

<br>

<%= link_to "Add another site", new_post_path %>