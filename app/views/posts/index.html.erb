<% if user_signed_in? %> <!-- SIGNED IN USER INTRO -->
	<h1 class="welcome">
		
		<span class="welcome-user">Hello <%= current_user.name %></span><br>
		What will you
			<div class="search-bar">
				<%= form_tag(search_path, method: "get") do %>
					<%= text_field_tag :search, nil, placeholder: "discover today?", name: 'query', autofocus: true, required: true %>
					<button class='search-button glyphicon glyphicon-search'></button>
				<% end %>
			</div>
<!-- 		today? -->

		<p class="share-link"><%= link_to "Share your link!", new_post_path, remote: true %></p>
		<div class="index-form ajax" style="display:none;"></div>

	</h1>
<% else %> <!-- GENERIC USER INTRO -->
	<h1 class="welcome">

		<span class="welcome-user app-title">
			Wanderful
		</span>, &nbsp;
		share and
		<div class="search-bar">
			<%= form_tag(search_path, method: "get") do %>
				<%= text_field_tag :search, nil, placeholder: "discover", name: 'query', autofocus: true, required: true %>
			<% end %>
		</div>
		today!
		<br>

		<span class="signup"><%= link_to "Join here.", new_user_registration_path, remote: true %></span>
		<div class="registration-form ajax" style="display:none;"></div>

	</h1>
<% end %>

<div class="post-container"> <!-- POST DISPLAY LOOP -->
	<% @posts.each do |post| %>
		<%= render partial: post %>
	<% end %>
</div>

<br>