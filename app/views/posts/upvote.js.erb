$(document).ready(function() {
	var upvoteCount = <%= @post.get_upvotes.size %>;
	var downvoteCount = <%= @post.get_downvotes.size %>;

	if (upvoteCount === 1) {
		var upvotes = upvoteCount + " Like";
	} else {
		var upvotes = upvoteCount + " Likes";
	}

	if (downvoteCount === 1) {
		var downvotes = downvoteCount + " Dislike";
	} else {
		var downvotes = downvoteCount + " Dislikes";
	}

	$(".like").html(upvotes);
	$(".dislike").html(downvotes);
});